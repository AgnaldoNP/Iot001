<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/recycler_vertical_padding"
    android:paddingTop="@dimen/recycler_vertical_padding">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/simple_recycle_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/grey"
        android:dividerHeight="0.5dp"
        android:footerDividersEnabled="false"/>

    <include layout="@layout/fast_scroller"/>

    <ProgressBar
        android:id="@+id/simple_recycle_view_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/data_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:text="@string/noDataToShow"
        android:textColor="@color/grey"
        android:visibility="gone"/>

</FrameLayout>
